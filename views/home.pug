extends layout.pug
block content
 if user 
  .alert.alert-warning.alert-dismissible.fade.show(role='alert')
   strong Hey #{user}!
    |  Gracias por subscribirte a nuestro newsletter.
   button.close(type='button' data-dismiss='alert' aria-label='Close')
    span(aria-hidden='true') &times;

 .hero.jumbotron.p-4.p-md-5.text-dark.rounded.bg-primary
  .row.tam.align-items-center.p-5.color
    .col-sm-3.col-md-6.px-0
      h1.font-italic Una Pasi√≥n Indescriptible por los libros
 .row.mb-2
  each item in reviews
   .col-md-6
    .row.no-gutters.border.rounded.overflow-hidden.flex-md-row.mb-4.shadow-sm.h-md-250.position-relative
      .col.p-4.d-flex.flex-column.position-static
        strong.d-inline-block.mb-2.text-primary= item.label
        h3= item.title
        .mb-1.text-muted= item.date
        //- p.card-text.mb-auto= item.text
        a.stretched-link(href='#') Continuar leyendo
      .col-auto.d-none.d-lg-block
        img(width='200' height='250' src= item.file preserveaspectratio='xMidYMid slice' focusable='false' role='img' aria-label='Placeholder: Thumbnail')
          //- title Placeholder
          //- rect(width='100%' height='100%' fill='#55595c')
          //- text(x='50%' y='50%' fill='#eceeef' dy='.3em') Thumbnail
 .container
  .container-fluid.mt-5.mb-5
    div
      p.h2 Recomendacion de la Semana
    .row 
     each item in books
      .col-sm-12.col-md-6.col-lg-3.size
        img.size.rounded(src= item alt='')
     

    

